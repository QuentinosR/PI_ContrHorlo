#
#
# Script to adjust system settings for operating GigE cameras
#
echo "System adjustment for GigE cameras"
echo 
echo "NOTE: Only 'root' can run this script!"
echo
echo " ifconfig eth0 mtu 9000"
echo " ifconfig eth1 mtu 7200"
echo " sudo echo 2000000 > /proc/sys/net/core/rmem_max"
echo " sudo echo 2000000 > /proc/sys/net/core/rmem_default"
echo " sudo echo 10000 > /proc/sys/net/core/netdev_max_backlog"

echo " sudo adjusting..."

ifconfig eth0 mtu 9000
ifconfig eth1 mtu 7200
echo 2000000 > /proc/sys/net/core/rmem_max
echo 2000000 > /proc/sys/net/core/rmem_default
echo 10000 > /proc/sys/net/core/netdev_max_backlog

echo " Done."
exit 0
